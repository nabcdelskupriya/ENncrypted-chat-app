<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_backfile"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="20sp"
        android:id="@+id/del_gc_m"
        android:textColor="@color/black"
        android:padding="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="forward"
        android:textSize="20sp"
        android:id="@+id/forward_gc_m"
        android:textColor="@color/black"
        android:padding="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reply Privately"
        android:textSize="20sp"
        android:id="@+id/replyp_gc_m"
        android:textColor="@color/black"
        android:padding="4dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy"
        android:textSize="20sp"
        android:id="@+id/copy_gc_m"
        android:textColor="@color/black"
        android:padding="4dp"/>

</LinearLayout>